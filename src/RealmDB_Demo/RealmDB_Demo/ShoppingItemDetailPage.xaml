<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealmDB_Demo.ShoppingItemDetailPage"
             Title="{Binding Item.Name}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Name:" />
            <Entry Text="{Binding Item.Name}" />
            <Label Text="Description:" />
            <Entry Text="{Binding Item.Description}" />
            <Label Text="Got it?" />
            <Switch IsToggled="{Binding Item.GotIt, Mode=TwoWay}" HorizontalOptions="Start" />
            <Label Text="Store:" />
            <Label Text="{Binding Item.Store.Name}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>